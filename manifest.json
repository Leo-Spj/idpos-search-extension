{
  "manifest_version": 3,
  "name": "Universal Navigator",
  "description": "Floating command bar to accelerate navigation on any website with custom routes.",
  "version": "0.3.0",
  "permissions": ["activeTab", "storage", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "toggle-command-bar": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Toggle the Navigator command bar"
    }
  },
  "action": {
    "default_title": "Universal Navigator - Gesti√≥n de Rutas"
  },
  "options_page": "manage.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "data/navigation_tree.json",
        "data/routes.csv",
        "ranking.js",
        "routes-loader.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
